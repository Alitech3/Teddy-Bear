{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:@next/next/recommended",
    "next/core-web-vitals"
  ],
  "env": {
  "browser": true,
  "es2021": true
},
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "ignorePatterns":[
  "react/react-in-jsx-scope"
  ],
  "rules": {
    "indent": [
        "error",
        2
    ],
  "react/no-unescaped-entities": "off",
    "linebreak-style": [
        "error",
        "windows"
    ],
    "quotes": [
        "error",
        "single"
    ],
    "semi": [
        "error",
        "always"
    ]
  }
}
 
